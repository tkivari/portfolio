@font-face
    font-family logo
    src url(../fonts/IronBrine.ttf)

@keyframes rotateletter
    0%
        transform rotatY(0deg)
    45%
        transform rotateY(0deg)
    50%
        transform rotateY(180deg)
    95%
        transform rotateY(180deg)
    100%
        transform rotateY(0deg)

header
    font-family logo
    .logo
        padding: 10px 40px
        font-size 5em
        display block
        cursor pointer
 
        #rotate
            animation rotateletter 25s infinite
            display inline-block


 @media screen and (max-width: 600px)
    header
        .logo
            padding 10px 50px 5px 30px
            font-size 3.5em
            text-align center
