@font-face
    font-family logo
    src url(../fonts/IronBrine.ttf)

@keyframes logo
    0%
        transform rotateX(0deg)
    10% 
        transform rotateX(0deg)
    11%
        transform rotateX(180deg)
    12% 
        transform rotateX(0deg)
    100%
        transform rotateX(0deg)

@keyframes rotateletter
    0%
        transform rotate(0deg)
    20%
        transform rotate(0deg)
    100%
        transform rotate(360deg)

header
    font-family logo
    .logo
        padding: 10px
        font-size 5em
        position absolute
        display block
        cursor pointer
        animation logo 60s infinite


        #rotator
            animation rotateletter 2s infinite